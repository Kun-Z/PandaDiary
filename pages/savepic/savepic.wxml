<view class='PicBox'>
  <image class='Pic' src='../../image/1.png' mode='aspectFill'></image>
  <view class="{{item[0].class?'Text1':'Text'}}" wx:for='{{textArr}}' data-key='{{index}}'>
    <view class='TextItem' wx:for='{{item}}' wx:for-item='newItem' style='font-size:{{FontSize}}rpx;{{newItem.style}}' data-key='{{newItem.pos}}' bindtap='textTap'>{{newItem.value}}</view>
  </view>
</view>
<view class='LeftBar'>
  <block wx:for='{{LeftBar}}'>
    <button class="{{item.value?'BarItemClick':'BarItem'}}" style='{{item.style}}' bindtap='{{item.tap}}' data-key='{{item.key}}' data-id='{{index}}'>
      <view class='BarItemText'>{{item.text}}</view>
    </button>
  </block>
</view>
<view class='BottomBar'>
  <button class='Button'>
    <image class='icon' src='../../image/savepic.png' mode='aspectFit'></image>
    <text class='title'>保存</text>
  </button>
  <button class='Button'>
    <image class='icon' src='../../image/share.png' mode='aspectFit'></image>
    <text class='title'>分享</text>
  </button>
</view>