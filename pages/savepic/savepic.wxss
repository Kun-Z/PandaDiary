/* pages/savepic/savepic.wxss */

.canvasBox {
  width: 250px;
  /* border: 5rpx solid black;  */
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
}

.preView {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  position: absolute;
  z-index: 2;
}

.preview image {
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  border: 1px dashed #fff;
}

.PicBox {
  /* height: 700rpx; */
  width: 500rpx;
  position: absolute;
  top: 0;
  left: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.Pic {
  width: 500rpx;
  height: 400rpx;
  margin: 0;
}

.Text {
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  margin: 0;
}

.Text1 {
  width: 500rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: center;
  margin: 0;
}

.TextItem {
  white-space: pre-wrap;
  margin: 0;
}

.LeftBar {
  height: 1106rpx;
  width: 200rpx;
  /* background-color: CornflowerBlue; */
  border-right: 5rpx solid #ddd;
  position: fixed;
  left: 0;
  top: 0;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  /* flex-direction: column; *//* justify-content: center; */
}

.BarItem {
  width: 80rpx;
  height: 80rpx;
  /* padding-left: 0rpx; */
  border: solid gray;
  border-radius: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.BarItem::after {
  border: none;
}

.BarItemClick {
  width: 80rpx;
  height: 80rpx;
  padding: 0rpx;
  border: solid lightcoral;
  background-color: lightpink;
  display: flex;
  align-items: center;
  justify-content: center;
}

.BarItemClick::after {
  border: none;
}

.BarItemText {
  font-size: 40rpx;
}
