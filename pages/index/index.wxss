/* pages/index/index.wxss */
.ImageBox{
  height: 250rpx;
  width: 100%;
  position: fixed;
}
.TitleBox{
  height: 60rpx;
  width: 650rpx;
  position: fixed;
  top:260rpx;
  left: 0;
  right: 0;
  margin: 0 auto; 
  display: flex;
  justify-content: center;
}
.Data{
  width: 325rpx;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  border: solid 3rpx;
}
.Weather{
  height: 60rpx;
  width: 325rpx;
  font-size: 40rpx;
  text-align: center;
  border: solid 3rpx;
}
.WeatherSec{
  height: 240rpx;
  width: 100%;
  background-color: cornflowerblue;
  position: fixed;
  top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.WeatherItem{
  width: 150rpx;
  height: 50rpx;
  font-size: 40rpx;
  text-align: center;
  /* border: 1rpx solid;  */
  margin: 15rpx;
  justify-content: center;
}
.TextBox{
  height: 780rpx;
  width: 100%;
  position: fixed;
  top:320rpx;
}
.TextArea{
  height: 750rpx;
  width: 650rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto; 
  border: solid 5rpx;
  padding-left: 10rpx; 
  padding-right: 10rpx;
}
.TextLen{
  font-size: 25rpx;
  color: grey;
  position: absolute;
  top:0rpx;
  right: 40rpx;
}
.BottomBar{
  height: 100rpx;
  width: 100%;
  background-color: cornflowerblue;
  border-top-style: 1px solid black;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
}
.Button{
  flex-grow: 1;
  height: 100%;
  width: 20%;
  background: none;
  border-radius: 0;
  display: flex;
  flex-direction: column;
}
.Button::after{
  border: none;
}
.icon{
  height: 50rpx;
  width: 100%;
  margin-top: 10rpx;
}
.title{
  height: 30rpx;
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  margin-bottom: 5rpx;
}